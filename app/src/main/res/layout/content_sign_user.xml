<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="msd.com.vaccinebook.SignUser"
    tools:showIn="@layout/activity_sign_user"
    android:layoutDirection="rtl"
    android:background="#3F51B5">


    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="שם"
        android:id="@+id/textView6"
        android:textIsSelectable="false"
        android:textSize="20sp"
        android:textColor="#68a0c9"
        android:layout_above="@+id/m_NameSign"
        android:layout_alignRight="@+id/m_NameSign"
        android:layout_alignEnd="@+id/m_NameSign"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="false"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#070707"
        android:background="#ffffff"
        android:id="@+id/m_NameSign"
        android:layout_above="@+id/textView5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="שם משפחה"
        android:id="@+id/textView5"
        android:textSize="20dp"
        android:textColor="#68a0c9"
        android:layout_above="@+id/m_LastNameSign"
        android:layout_alignRight="@+id/textView10"
        android:layout_alignEnd="@+id/textView10"
        android:layout_alignParentRight="true"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#070707"
        android:background="#ffffff"
        android:id="@+id/m_LastNameSign"
        android:layout_above="@+id/textView7"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:inputType="none"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="תעודת זהות"
        android:id="@+id/textView7"
        android:textSize="20dp"
        android:textColor="#68a0c9"
        android:layout_above="@+id/m_IdSign"
        android:layout_alignParentRight="true"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#070707"
        android:background="#ffffff"
        android:id="@+id/m_IdSign"
        android:layout_above="@+id/textView8"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="false"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="דואר רלקטרוני"
        android:id="@+id/textView8"
        android:textSize="20dp"
        android:textColor="#68a0c9"
        android:layout_above="@+id/m_MailSign"/>
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#070707"
        android:background="#ffffff"
        android:id="@+id/m_MailSign"
        android:layout_above="@+id/textView9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="שם משתמש"
        android:id="@+id/textView9"
        android:textSize="20dp"
        android:textColor="#68a0c9"
        android:layout_above="@+id/m_UserNameSign"
        android:layout_alignRight="@+id/m_UserNameSign"
        android:layout_alignEnd="@+id/m_UserNameSign"
        android:layout_alignParentRight="true"/>
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#070707"
        android:background="#ffffff"
        android:id="@+id/m_UserNameSign"
        android:layout_above="@+id/textView10"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="סיסמא"
        android:id="@+id/textView10"
        android:textSize="20dp"
        android:textColor="#68a0c9"
        android:layout_above="@+id/m_PassSign"
        android:layout_alignRight="@+id/m_PassSign"
        android:layout_alignEnd="@+id/m_PassSign"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="false"/>
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#070707"
        android:background="#ffffff"
        android:id="@+id/m_PassSign"
        android:layout_above="@+id/textView11"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:password="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="גיל"
        android:id="@+id/textView11"
        android:textSize="20dp"
        android:textColor="#68a0c9"
        android:layout_above="@+id/m_userAge"
        android:layout_alignRight="@+id/m_userAge"
        android:layout_alignEnd="@+id/m_userAge"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="false"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#070707"
        android:background="#ffffff"
        android:id="@+id/m_userAge"
        android:layout_above="@+id/textView12"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="כתובת"
        android:id="@+id/textView12"
        android:textSize="20dp"
        android:textColor="#68a0c9"
        android:layout_above="@+id/m_userAdress"
        android:layout_alignRight="@+id/m_userAdress"
        android:layout_alignEnd="@+id/m_userAdress"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="false"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#070707"
        android:background="#ffffff"
        android:id="@+id/m_userAdress"
        android:layout_above="@+id/m_SignButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="הרשמה"
        android:id="@+id/m_SignButton"
        android:textColor="#fefefe"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/signuser"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/signuser"
        android:layout_above="@+id/textView6"
        android:scaleType="fitXY"/>


</RelativeLayout>
