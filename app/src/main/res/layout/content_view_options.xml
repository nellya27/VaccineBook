<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="#5646D0"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:id="@+id/userNameTextView"
        android:gravity="center"
        android:textColor="@android:color/holo_blue_bright"/>

    <Button
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:text="הוסף חיסון"
        android:textSize="30sp"
        android:layout_marginTop="140dp"
        android:background="@drawable/buttonshape"
        android:id="@+id/addVaccinBtn"
        android:textColor="#FFFFFF" />
    <Button
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:text="רשימת חיסונים"
        android:textSize="30sp"
        android:layout_marginTop="5dp"
        android:background="@drawable/buttonshape"
        android:id="@+id/listVaccinsBtn"
        android:textColor="#FFFFFF" />
    <Button
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:text="מקומות להתחסן"
        android:textSize="30sp"
        android:layout_marginTop="5dp"
        android:background="@drawable/buttonshape"
        android:id="@+id/showAdultPlacesMapBtn"
        android:textColor="#FFFFFF" />

    <ImageView
        android:layout_width="148dp"
        android:layout_height="164dp"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:src="@drawable/syringe6"/>


</LinearLayout>
